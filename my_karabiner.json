{
  "title": "For Japanese",
  "rules": [
    {
      "description": "RightCommand to Toggle IME",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "imemode",
              "value": 0
            }
          ],
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "imemode",
                "value": 1
              }
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "imemode",
              "value": 1
            }
          ],
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_kana"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "imemode",
                "value": 0
              }
            }
          ]
        }
      ]
    }
  ]
}
